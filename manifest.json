{
  "manifest_version": 3,
  "name": "Component Creator",
  "version": "0.1.0",
  "description": "Highlight elements on hover with keyboard shortcut",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.tsx"]
    }
  ],
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://unpkg.com"
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sandbox.html",
        "vendor/react.production.min.js",
        "vendor/react-dom.production.min.js",
        "vendor/babel.min.js",
        "vendor/tailwind.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-highlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Toggle element highlighting mode"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
