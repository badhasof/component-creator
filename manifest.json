{
  "manifest_version": 3,
  "name": "Component Creator",
  "version": "0.1.0",
  "description": "Highlight elements on hover with keyboard shortcut",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.tsx"]
    }
  ],
  "commands": {
    "toggle-highlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Toggle element highlighting mode"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
